<div class="container">
  <div class="content content__img--sign-up content--right-side">
  </div>
  <div class="content content--right-side">
    <%- if controller_name != 'sessions' %>
      <%= link_to "I'm already a member", new_session_path(resource_name), class: "link--sign-up link-hover"  %>
    <% end %>
  </div>
  <div class="content__info content--left-side">
    <div class="content__title">
      Sign Up
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field-block field-borderbot">
        <%= f.text_field :username, autofocus: true, autocomplete: "email", class: "content__input-text", placeholder: "Username" %>
      </div>
      <div class="field-block field-borderbot">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "content__input-text", placeholder: "Email" %>
      </div>
      <div class="field-block field-borderbot">
        <%= f.password_field :password, autocomplete: "new-password", class: "content__input-text", placeholder: "Password (6 characters minimum)" %>
      </div>
      <div class="margin-none field-block field-borderbot">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "content__input-text", placeholder: "Repeat password"%>
      </div>
      <div>
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
      <div class="field-block1">
        <%= f.submit "Sign in",class: "button button--style button-text" %>
      </div>
    <% end %>
  </div>
</div>
