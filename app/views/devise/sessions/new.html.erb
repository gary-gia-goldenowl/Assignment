<div class="container">
  <div class="content content__img--sign-in content--left-side">
  </div>
  <div class="content__info content--right-side">
    <div class="content__title">
      Sign In
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="content__box">
        <%= f.text_field :login, autofocus: true, class: "content__input-text", placeholder: "Username/Email" %>
      </div>
      <div class="content__box">
        <%= f.password_field :password, autocomplete: "current-password" , class: "content__input-text", placeholder: "Password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="content__agree">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,class: "agree__text" %>
        </div>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="content-forgotpass">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-forgotpass link-hover" %><br />
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "Sign in",class: "button button--style button-text" %>
      </div>
    <% end %>
  </div>
  <div class="foo">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create an account", new_registration_path(resource_name),class: "link--sign-in link-hover" %><br />
    <% end %>
    <div class="foo__social">
      <span class="foo__text">Or login with</span>
      <div class="foo__social-icon">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to image_tag("img/facebook.png", class: "Icon Icon--FB"), omniauth_authorize_path(resource_name, provider), method: :post%><br />
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
